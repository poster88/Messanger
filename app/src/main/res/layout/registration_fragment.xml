<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/regUserImage"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <Button
        android:id="@+id/setImageBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set image"/>

    <TextView
        android:id="@+id/regUserNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="User name:"/>

    <EditText
        android:id="@+id/regUserNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="set a user name"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/regOkBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"/>

        <Button
            android:id="@+id/regCancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"/>
    </LinearLayout>

</LinearLayout>